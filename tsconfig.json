{
  "compilerOptions": {
    "types": ["node"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/api/types",
      "./src/api/store"
    ],
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.json"],
  "exclude": ["node_modules"]
  
}
 